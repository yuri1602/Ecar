# Application
NODE_ENV=development
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173
PORT=3000

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ecar
DATABASE_USER=ecar_user
DATABASE_PASSWORD=ecar_password_dev
DATABASE_URL=postgresql://ecar_user:ecar_password_dev@localhost:5432/ecar

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=ecar_redis_dev
REDIS_URL=redis://:ecar_redis_dev@localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@ecar.local
SMTP_FROM_NAME=ECar Fleet System

# Logging
LOG_LEVEL=debug

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=60

# Notifications
NOTIFICATION_REMINDER_24H=true
NOTIFICATION_REMINDER_48H=true
NOTIFICATION_REMINDER_72H=true
NOTIFICATION_MAX_RETRIES=3

# Business Rules
MAX_ODOMETER_DISTANCE=2000
MIN_ODOMETER_DISTANCE=1
MAX_SESSION_AGE_DAYS=30
